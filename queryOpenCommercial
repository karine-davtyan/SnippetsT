query GetLocationCatalogItems($locationGid: GID!) {
  location(gid: $locationGid) {
    draftVersion {
      name
      catalogItems {
        edges {
          node {
            gid
            publishedVersion {
              description
              attributes {
                edges {
                  node {
                    draftVersion {
                      name
                      description
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
